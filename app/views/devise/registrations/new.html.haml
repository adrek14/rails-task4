%body{ :style => "background: #000000; color: #88dd00;"}

%h2 Sign up
= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
  = devise_error_messages!
  %p
    = f.label :username, "Username (e.g. neo )"
    %br/
    = f.text_field :username
  %p
    = f.label :email, "Email (e.g. neo@neostrada.pl)"
    %br/
    = f.text_field :email
  %p
    = f.label :password, "Password (e.g. 123456)"
    %br/
    = f.password_field :password
  %p
    = f.label :password_confirmation, "Password confirmation (e.g. 123456)"
    %br/
    = f.password_field :password_confirmation
  %p= f.submit "Sign up"
= render :partial => "devise/shared/links"
